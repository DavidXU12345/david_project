<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Course</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/courses" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="course[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="teacher">Teacher</label>
                <input class="form-control" type="text" id="teacher" name="course[teacher]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="course[description]" rows="5"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-4">
                <button class="btn btn-success">Add Course</button>
                <a class="btn btn-info" href="/courses">Go back to All Courses</a>
            </div>
        </form>
        
    </div>
</div>